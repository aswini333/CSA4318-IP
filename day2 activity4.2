<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send Message to Server</title>
    <script>
        async function sendMessageToServer() {
            const messageData = {
                message: document.getElementById("messageInput").value
            };

            try {
                const response = await fetch('https://api.example.com/sendTextMessage', { // Replace with your API
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(messageData)
                });

                const result = await response.json();
                document.getElementById("responseMessage").innerText = result.status;
            } catch (error) {
                console.error("Error sending message:", error);
            }
        }
    </script>
</head>
<body>

    <h2>Send Message to Server</h2>
    <input type="text" id="messageInput" placeholder="Type your message here">
    <button onclick="sendMessageToServer()">Send Message</button>

    <p id="responseMessage"></p>

</body>
</html>
