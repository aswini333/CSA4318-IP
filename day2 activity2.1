<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Handling Example</title>
    <style>
        #styledElement {
            width: 100px;
            height: 100px;
            background-color: lightblue;
            margin: 20px;
            transition: background-color 0.3s;
        }
    </style>
    <script>
        function handleClick() {
            // a) Change style of HTML element
            var element = document.getElementById("styledElement");
            element.style.backgroundColor = "lightgreen";

            // b) Change HTML element attribute value
            var imgElement = document.getElementById("imageElement");
            imgElement.setAttribute("src", "https://via.placeholder.com/150");

            // c) Perform calculation
            var num1 = 10;
            var num2 = 20;
            var sum = num1 + num2;
            document.getElementById("calculationOutput").innerText = "Sum: " + sum;
        }
    </script>
</head>
<body>

    <h2>Event Handling Example</h2>

    <div id="styledElement" onclick="handleClick()"></div>
    <img id="imageElement" src="https://via.placeholder.com/150" alt="Placeholder Image">
    <p id="calculationOutput"></p>

</body>
</html>
