<!DOCTYPE html>
<html>
<head>
    <title>User Input Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 50%;
            margin: auto;
            background: #fff;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }
        h2 {
            text-align: center;
            color: #333;
        }
        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }
        input[type="text"], input[type="email"], input[type="password"], input[type="number"], textarea, select {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        input[type="file"] {
            margin-bottom: 20px;
        }
        input[type="radio"], input[type="checkbox"] {
            margin-right: 10px;
        }
        .btn {
            display: inline-block;
            background-color: #28a745;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .btn img {
            width: 20px;
            height: 20px;
            vertical-align: middle;
            margin-right: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>User Input Form</h2>

        <!-- Form to collect user inputs -->
        <form action="#" method="post">

            <!-- Name input -->
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>

            <!-- Password input -->
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <!-- Email input -->
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <!-- Gender input -->
            <label>Gender:</label>
            <input type="radio" id="male" name="gender" value="male" required> Male
            <input type="radio" id="female" name="gender" value="female" required> Female

            <!-- Date of birth input -->
            <label for="dob">Date of Birth:</label>
            <input type="date" id="dob" name="dob" required>

            <!-- Number input (range 1-10) -->
            <label for="number">Choose a number (1-10):</label>
            <input type="number" id="number" name="number" min="1" max="10" required>

            <!-- File upload input -->
            <label for="file">Upload a File:</label>
            <input type="file" id="file" name="file" required>

            <!-- Hobbies (checkbox) -->
            <label>Hobbies:</label>
            <input type="checkbox" id="reading" name="hobbies" value="reading"> Reading
            <input type="checkbox" id="traveling" name="hobbies" value="traveling"> Traveling
            <input type="checkbox" id="sports" name="hobbies" value="sports"> Sports

            <!-- Multi-line feedback input -->
            <label for="feedback">Feedback:</label>
            <textarea id="feedback" name="feedback" rows="5" required></textarea>

            <!-- Country selection (dropdown) -->
            <label for="country">Choose your country:</label>
            <select id="country" name="country" required>
                <option value="India">India</option>
                <option value="USA">USA</option>
                <option value="Canada">Canada</option>
                <option value="UK">UK</option>
                <option value="Australia">Australia</option>
            </select>

            <!-- Submit button with logo -->
            <button type="submit" class="btn">
                <img src="logo.png" alt="Logo"> Submit
            </button>

        </form>
    </div>

</body>
</html>
